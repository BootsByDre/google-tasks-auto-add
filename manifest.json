{
  "manifest_version": 3,
  "name": "Add to Google Tasks (Select List)",
  "version": "1.0",
  "description": "Gets current tab info and adds a task to a selected Google Tasks list.",
  "permissions": [
    "activeTab",
    "notifications",
    "identity",
    "storage"  // Added storage permission
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "oauth2": {
    "client_id": "1083733577571-qd2plf7h0uvkkcpsct1o1sg60m00jjgc.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/tasks"
    ]
  }
}
